<div class="container100vh flex justify-center items-center">
  <div class="w-80 rounded-2xl bg-slate-900">
    <div class="flex flex-col gap-2 p-8">
      <form method="POST" action="/api/session/register">
        <p class="text-center text-3xl text-white-300 mb-4">Register</p>
        <input
          type="text"
          id="first_name"
          name="first_name"
          required
          class="mt-4 bg-slate-900 w-full rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-700 focus:ring-offset-2 focus:ring-offset-gray-800"
          placeholder="Nombre"
        />
        <input
          class="mt-4 bg-slate-900 w-full rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-700 focus:ring-offset-2 focus:ring-offset-gray-800"
          type="text"
          id="last_name"
          name="last_name"
          required
          placeholder="Apellido"
        />
        <input
          class="mt-4 bg-slate-900 w-full rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-700 focus:ring-offset-2 focus:ring-offset-gray-800"
          type="number"
          id="age"
          name="age"
          required
          placeholder="Edad"
        />
        <input
          class="mt-4 bg-slate-900 w-full rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-700 focus:ring-offset-2 focus:ring-offset-gray-800"
          type="email"
          id="email"
          name="email"
          required
          placeholder="Email"
        />
        <input
          class="mt-4 bg-slate-900 w-full rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-700 focus:ring-offset-2 focus:ring-offset-gray-800"
          placeholder="Password"
          type="password"
          id="password"
          name="password"
          required
        />
        <div class="flex flex-row">
          <a href="/login" class="mt-8 mr-4 btn btn-sm btn-primary">Iniciar
            sesion</a>
          <button
            type="submit"
            class="mt-8 btn btn-sm btn-primary"
          >Registrarse</button>
        </div>

      </form>
    </div>
  </div>
</div>